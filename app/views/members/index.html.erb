
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Miembros</h2>
            </div>

            <div class="col-md-6">
                <%=link_to "Crear miembro", new_member_path, class:"btn btn-outline-dark create-button"%>
            </div>
        </div>
    </div>

    


<div class="container-table">    
    <table class="table table-hover">
        <thead>
            <tr>
               
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Grupo</th>                
                <th>Acciones</th>                       
            </tr>
        </thead>
        <tbody>                    
            <%@members.each do |member|%>
                <tr>
                    
                    <td><%=member.name%></td>
                    <td><%=member.surname%></td>
                    <td><%=member.group.name%></td>
                    
                    <td>
                        <%=link_to "Detalles", member, class:"btn btn-outline-success btn-sm"%>
                        <%=link_to "Editar", edit_member_path(member), class:"btn btn-outline-success btn-sm"%>
                        <%=link_to "Eliminar",member_path(member),method: "DELETE", data:{confirm:"Seguro de que quieres eliminar"}, class:"btn btn-outline-success btn-sm"%>
                    </td>               
                </tr>                                
            <%end%>                                    
        </tbody>   
    </table>      
</div>    




