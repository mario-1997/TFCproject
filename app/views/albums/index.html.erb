<% flash.each do |type, msg| %>
  <div class="alert alert-danger"> 
    <%= msg %>
  </div>
<% end %>



<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Albums</h2>
        </div>
        <div class="col-md-6">
            <%=link_to "Crear Album", new_album_path, class:"btn btn-outline-dark create-button"%>
        </div>
    </div>
</div>


<div class="container-table">    
    <table class="table table-hover">
        <thead>
            <tr>                
                <th>Nombre</th> 
                <th>Grupo</th>                                  
            </tr>
        </thead>
        <tbody>            
            <%@albums.each do |album|%>
                <tr>                    
                    <td><%=album.name%></td>
                    <td><%=album.group.name%></td>                    
                    <td>
                        <%=link_to "Detalles", album, class:"btn btn-outline-success btn-sm"%>
                        <%=link_to "Editar", edit_album_path(album), class:"btn btn-outline-success btn-sm"%>  
                        <%=link_to "Eliminar", album, method: :delete,data:{confirm:"Seguro de que quieres eliminar este Album?"}, class:"btn btn-outline-success btn-sm"%>
                    </td>                          
                </tr>                        
            <%end%>                            
        </tbody>                
    </table>       
</div>