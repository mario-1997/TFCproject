<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Conciertos</h2>
        </div>
        <div class="col-md-6">
            <%=link_to "Crear concierto", new_concert_path,class:"btn btn-outline-dark create-button"%>
        </div>
    </div>
</div>



<div class="container-table">    
    <table class="table table-hover">
        <thead>
            <tr>
                
                <th>Grupo</th>
                <th>Lugar</th>           
            </tr>
        </thead>
        <tbody>            
            <%@concerts.each do |concert|%>
                <tr>
                    
                    <td><%=concert.group.name%></td>
                    <td><%=concert.place%></td>
                    <td>
                        <%=link_to "Detalles", concert, class:"btn btn-outline-success btn-sm"%>
                        <%=link_to "Editar", edit_concert_path(concert), class:"btn btn-outline-success btn-sm"%>
                        <%=link_to "Eliminar",concert_path(concert),method: "DELETE", data:{confirm:"Seguro de que quieres eliminar"}, class:"btn btn-outline-success btn-sm"%>
                    </td>                               
                </tr>                        
            <%end%>                            
        </tbody>                
    </table>    
</div>



